<h3><span class = "recipes_link_back">&#8678; <%= link_to('Back to recipes', recipes_path) %></span></h3>


<h1 class = "recipe_name"><%= @recipe.name %></h1>

<div class = "recipe">

<% if current_user == @recipe.user %>
<div class="modify_recipe">
  <%= link_to('Edit recipe', edit_recipe_path, :id => "edit_recipe_button") %>
  <%= link_to('Delete recipe', recipe_path(@recipe), method: :delete, data: {confirm: "Are you sure you want to delete this recipe?"}, :id => "delete_recipe_button") %>
</div>
<% end %>

<div class = "index_recipe_show">
  <h3>Category: &nbsp;&nbsp;<span><%= link_to(("#{@recipe.category.name}").capitalize, category_path(@recipe.category)) %></span></h3>
  <h3>Prep time: &nbsp;&nbsp;<span><%=@recipe.prep_time%></h3>
  <h3>Complexity: &nbsp;&nbsp;
    <span><%@recipe.complexity.times do %>
              <%= image_tag 'cookbook_no_bg.png', :class => "logo_img_diff", :width => "30", :length => "30" %>
          <%end%>
    </span>
  </h3>
  <h3>Servings: &nbsp;&nbsp;<span><%=@recipe.servings%></h3>
  <h3>Ingredients: &nbsp;&nbsp;<span><%=@recipe.ingredients%></span></h3>
  <h3>Directions: &nbsp;&nbsp;<span><%=@recipe.directions%></span></h3>
</div>

<%= render(partial: 'comments/form', locals: { recipe: @recipe, comment: @comment }) %>

<% @comments.each do |comment| %>
  <p>posted on:   <%= comment.created_at.strftime("%B %d, %Y") %> <%= comment.created_at.strftime("%I:%M %p ") %></p>
  <p><%= comment.description %></p>
<% end %>
