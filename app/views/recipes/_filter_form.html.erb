<%= form_tag(recipes_path, method: "get") do |f| %>

  <fieldset><legend><%= t("recipe.prep_time") %></legend>
    <%= label_tag(:prep_time_shorter_than, "shorter than") %>
    <%= number_field_tag(:prep_time_shorter_than, params[:prep_time_shorter_than], in: 0..1000) %>
    <%= label_tag(:prep_time_equal_to, "equal to") %>
    <%= number_field_tag(:prep_time_equal_to, params[:prep_time_equal_to], in: 0..1000) %>
    <%= label_tag(:prep_time_longer_than, "longer than") %>
    <%= number_field_tag(:prep_time_longer_than, params[:prep_time_longer_than], in: 0..1000) %>

  </fieldset>

  <%= submit_tag("Filter", name: nil) %>
<% end %>

