<div class="user_info" id="user_info">
  <h1><%= @user.name %></h1>

    <div class="edit_profile">
      <% if current_user && current_user[:id] == @user.id %>
        <%= link_to 'Edit profile', edit_user_path%>
        <%= link_to 'Delete profile', user_path(@user) ,method: :delete, data: {confirm: "Are you sure you want to delete this profile?"} %>
      <% end %>
    </div>
</div>


  <%if @user.recipes.length > 0 %>
  <h2>You have <%= @user.recipes.length %> recipes.</h2>
  <hr>
  <div class="block">
      <% @user.recipes.each do |recipe| %>
          <div class="index_recipe">
            <%=link_to("#{recipe.name}", recipe_path(recipe))%>
            <h3> Category: &nbsp;&nbsp;<span><%= link_to(recipe.category.name.capitalize, category_path(recipe.category)) %></span> </h3>
          </div>
      <% end  %>
    <% end  %>
  </div>
