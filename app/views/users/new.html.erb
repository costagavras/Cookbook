<h1>New User</h1>

<div class="sign_up_form">

  <%= form_for @user do |f| %>

    <div class="error_css">
      <%  if @user.errors.any? %>
          <h2> Errors: </h2>
          <ul>
              <%  @user.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
              <% end  %>
          </ul>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

    <div class="field">
      <%= f.submit %>
    </div>
  <% end %>
</div>
